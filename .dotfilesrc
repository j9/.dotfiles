[dotfiles]

prefix = .

repository = ~/.dotfiles

ignore = [
  '.dotfilesrc',
  '.git',
  '.gitignore',
  '.gitmodules',
  '.config',
  'README',
  '*.swp']

# hack for link only shown dirs under .config
# not the whole thing, should add the base directory
# to ignores as well
externals = {
  '.config/awesome': '~/.dotfiles/.config/awesome'}
